{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Connexion{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    {# le composant qui fait l'authentification attend de recevoir dans
    $_POST 2 champs : _username et _password #}

    <form method="post">
        <div class="form-group">
            <label>Email</label>
            <input type="email" name="_username" class="form-control" value="{{ last_username }}">
        </div>
        <div class="form-group">
            <label>Mot de passe</label>
            <input type="password" name="_password" class="form-control">
        </div>
        <div class="text-right">
            <button type="submit" class="btn btn-dark">
                Se connecter
            </button>
        </div>

    </form>

{% endblock %}
